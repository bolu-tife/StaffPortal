<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">UserProfile</h3>
    </div>
    <!--   <div class="col-md-7 align-self-center">
         <a href="https://wrappixel.com/templates/adminpro/" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Upgrade to Pro</a>
      </div>-->
</div>

<div class="row">
    <!-- column -->
    <div class="col-sm-12">
        <div class="white-box">
            <h3>UserProfile</h3>
            <div class="table-responsive">
                <form asp-action="Create" method="post" class="mt-4">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group ">
                        <label asp-for="Email">Employees</label>
                        <select class="form-control" asp-for="Email" id="Userid" asp-items="@(new SelectList(ViewBag.users, "Email", "Email"))">
                            <option>Choose Option</option>
                        </select>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName"> FirstName</label>
                        <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter FirstName" required="">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"> LastName</label>
                        <input type="text" asp-for="LastName" class="form-control" placeholder="Enter LastName" required="">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Country">Country</label>
                        <select asp-for="Country" class="form-control">
                            <option value="Nigeria">Nigeria</option>
                        </select>

                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NewStateId"> State</label>
                        <select asp-for="NewStateId" class="form-control" id="NewStatesId" asp-items="@(new SelectList(ViewBag.state, "Id", "Name"))">
                            <option>Select State Name</option>
                        </select>
                      <!--  <span asp-validation-for="NewStates" class="text-danger"></span> -->
                    </div>


                    <div class="form-group">
                        <label asp-for="LGAId"> Local Government</label>
                        <select class="form-control" id="LGAId" asp-for="LGAId" asp-items="@(new SelectList(string.Empty, "Id", "Name"))"></select>
                        <!--     <span asp-validation-for="LGAs" class="text-danger"></span> -->
                    </div>

                  
                    <div class="form-group">
                        <label asp-for="DepartmentId">Department</label>
                        <select class="form-control" asp-for="DepartmentId" asp-items="@ViewBag.department">
                            <option>Choose Department</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>




                    <button type="submit" class="btn btn-success mr-2">Submit</button>
                    <a asp-action="Cancel" type="button" class="btn btn-dark">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>



<script src="~/js/jquery-3.2.1.min.js"></script>
<!-- <script src="~/Login/vendor/jquery/jquery-3.2.1.min.js"></script> -->

<script>
    $(function () {
        $("#NewStatesId").change(function () {
            var url = '@Url.Content("~/")' + "UserProfile/GetLGA";
            var ddlsource = "#NewStatesId";
            $.getJSON(url, { id: $(ddlsource).val() }, function (data) {
                var items = '';
                $("#LGAId").empty();
                $.each(data, function (i, row) {
                    items += "<option value='" + row.value + "'>" + row.text + "</option>";
                });
                $("#LGAId").html(items);
            })
    //    });
    //});

            });
    }).change();


</script>


