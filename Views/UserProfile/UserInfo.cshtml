@model StaffPortal.Entities.UserProfile
@{
    ViewData["Title"] = "Edit User Profile";
}
<!-- ============================================================== -->

<div class="row bg-title">
    <div class="col-lg-12">
        <h4 class="page-title">Profile</h4>
        <ol class="breadcrumb">
            <li><a href="#">Dashboard</a></li>
            <li class="active">Profile Page</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- row -->
<div class="row">
    <div class="col-md-4 col-xs-12">
        <div class="white-box">
           

            <div class="row">

                 <div class="col-md-12 col-xs-4">
                    <div class="white-box">
                        <h3 class="form-group">Salary Structure</h3>
                        <form class="form-horizontal form-material">
                            <div class="form-group">
                                <label class="col-md-4">Grade Name</label>
                                <div class="col-md-8">
                                    <input type="text" value="Data from admin db" class="form-control form-control-line" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4">Level</label>
                                <div class="col-md-8">
                                    <input type="text" value="Data from admin db" class="form-control form-control-line" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4">Step</label>
                                <div class="col-md-8">
                                    <input type="text" value="Data from admin db" class="form-control form-control-line" readonly>
                                </div>
                            </div>
                        </form>


                    </div>
                </div> 

            </div>
        </div>
    </div>

    <div class="col-md-8 col-xs-12">
        <div class="col-md-12 col-xs-4">
            <div class="white-box">
                <h3 class="form-group">Work Structure</h3>
                <form class="form-horizontal form-material">
                    <div class="form-group">
                        <label class="col-md-4">Department</label>
                        <div class="col-md-8">
                            <input type="text" value="Data from admin db" class="form-control form-control-line" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4">Faculty</label>
                        <div class="col-md-8">
                            <input type="text" value="Data from admin db" class="form-control form-control-line" readonly>
                        </div>
                    </div>
                   
                </form>


            </div>
        </div>

    </div>
</div>

