@model IEnumerable<StaffPortal.Entities.Department>
@{
    ViewData["Title"] = "Departments";
}
<!-- ============================================================== -->

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-12">
                <h4 class="page-title">Departments</h4>
                <ol class="breadcrumb">
                    <li><a href="#">Dashboard</a></li>
                    <li class="active">Departments</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-sm-12">
               
                <div class="white-box">

                    <a asp-controller="Department" asp-action="Create" class="btn float-right hidden-sm-down btn-success"><i class="mdi mdi-plus-circle"></i>New Department</a>


                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Code</th>
                                    <th>Created By</th>
                                    <th>Date Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var department in Model)
                                {
                                <tr>
                                    <td>@department.Id</td>

                                    <td>@department.DeptName  </td>
                                    <td>@department.DeptCode </td>
                                    <td>@department.CreatedBy  </td>
                                    <td>@department.DateCreated    </td>

                                    <td>

                                    <td><a asp-action="Edit" asp-route-id="@department.Id" alt="Edit"><i class="ti-pencil" aria-hidden="true"></i></a> </td>
                                    <td><a onclick="return confirm('Are you sure you want to delete this record');" asp-action="Delete" asp-route-id="@department.Id"><i class="ti-trash" aria-hidden="true"></i></a> </td>

                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
