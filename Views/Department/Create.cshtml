@model StaffPortal.Entities.Department
@{
    ViewData["Title"] = "Edit Departments";
}
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Faculties</h3>
    </div>
  <!--   <div class="col-md-7 align-self-center">
       <a href="https://wrappixel.com/templates/adminpro/" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Upgrade to Pro</a>
    </div>--> 
</div>

<div class="row">
    <!-- column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">New Department</h4>
                <!-- <h6 class="card-subtitle">Add New Faculty</h6>-->
                <div class="table-responsive">
                    <form asp-action="Create" method="post" class="mt-4">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="DeptName">Name</label>
                            <input type="text" asp-for="DeptName" class="form-control" placeholder="Title" required="">
                            <span asp-validation-for="DeptName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DeptCode">Code</label>
                            <input type="text" asp-for="DeptCode" class="form-control" id="name" placeholder="Enter Faculty Name" required="">
                            <span asp-validation-for="DeptCode" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success mr-2">Submit</button>
                        <a href="Cancel" type="button" class="btn btn-dark">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>