@model StaffPortal.Entities.Grade
@{
    ViewData["Title"] = "Edit Grade";
}
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Grades</h3>
    </div>
    <!--   <div class="col-md-7 align-self-center">
         <a href="https://wrappixel.com/templates/adminpro/" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Upgrade to Pro</a>
      </div>-->
</div>
<div class="row">
    <!-- column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <form asp-action="Edit" method="post" class="mt-4">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="GradeName">Name</label>
                            <input type="text" asp-for="GradeName" class="form-control" placeholder="Title" required="">
                            <span asp-validation-for="GradeName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Level">Level</label>
                            <input type="text" asp-for="Level" class="form-control" id="name" placeholder="Enter Author Name" required="">
                            <span asp-validation-for="Level" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Step">Step</label>
                            <input type="text" asp-for="Step" class="form-control" id="name" placeholder="Enter Author Name" required="">
                            <span asp-validation-for="Step" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BasicSalary">Basic Salary</label>
                            <input type="text" asp-for="BasicSalary" class="form-control" id="name" placeholder="Enter Basic Salary" required="">
                            <span asp-validation-for="BasicSalary" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tax">Tax</label>
                            <input type="text" asp-for="Tax" class="form-control" id="name" placeholder="Enter Tax" required="">
                            <span asp-validation-for="Tax" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Lunch"> Lunch</label>
                            <input type="text" asp-for="Lunch" class="form-control" id="name" placeholder="Enter Lunch" required="">
                            <span asp-validation-for="Lunch" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Transport">Tax</label>
                            <input type="text" asp-for="Transport" class="form-control" id="name" placeholder="Enter Transport" required="">
                            <span asp-validation-for="Transport" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Medical">Medical</label>
                            <input type="text" asp-for="Medical" class="form-control" id="name" placeholder="Enter Medical" required="">
                            <span asp-validation-for="Medical" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Housing">Housing</label>
                            <input type="text" asp-for="Housing" class="form-control" id="name" placeholder="Enter Housing" required="">
                            <span asp-validation-for="Housing" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success mr-2">Submit</button>
                        <a asp-action="Cancel" class="btn btn-dark">Cancel</a>
                    </form>



                </div>
            </div>
        </div>
    </div>
</div>