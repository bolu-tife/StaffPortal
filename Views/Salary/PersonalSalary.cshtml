@using Microsoft.AspNetCore.Identity
@using StaffPortal.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model StaffPortal.Entities.Salary;
@{
    ViewData["Title"] = "Index";
}
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Salary</h3>
    </div>
    <!--   <div class="col-md-7 align-self-center">
         <a href="https://wrappixel.com/templates/adminpro/" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Upgrade to Pro</a>
      </div>-->
</div>
<div class="row">
    <!-- column -->
    <div class="col-sm-12">
        <div class="white-box">
            <h2 align="center"> @UserManager.GetUserName(User)'s Salary Details</h2>
            @*<h3>Salary Details</h3>*@
            <div class="table-responsive">
                <form asp-action="Index" method="post" class="mt-4">

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="table-responsive">
                        <table class="table">

                            <tbody>
                                <tr>
                                    <td>Email : @Model.Email</td>
                                    <td>Grade : @Model.GradeName</td>
                                </tr>
                                <tr>
                                    <td>Level : @Model.GradeLevel</td>
                                    <td>Step : @Model.GradeStep</td>
                                </tr>
                            </tbody>
                        </table>

                        <br />
                        <p>   <h3>Basic Salary: @Model.BasicSalary</h3></p>
                        <br />
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>PayItem</th>
                                    <th>Amount</th>
                                    <th>%</th>
                                    <th>PayItem Type</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Tax</td>
                                    <td>@Model.Tax</td>
                                    <td>@Model.TaxPercent</td>
                                    <td>@Model.TaxItemType</td>

                                </tr>
                                <tr>
                                    <td>Housing</td>
                                    <td>@Model.Housing</td>
                                    <td>@Model.HousingPercent</td>
                                    <td>@Model.HousingItemType</td>

                                </tr>
                                <tr>
                                    <td>Lunch</td>
                                    <td>@Model.Lunch</td>
                                    <td>@Model.LunchPercent</td>
                                    <td>@Model.LunchItemType</td>

                                </tr>
                                <tr>
                                    <td>Transport</td>
                                    <td>@Model.Transport</td>
                                    <td>@Model.TransportPercent</td>
                                    <td>@Model.TransportItemType</td>

                                </tr>
                                <tr>
                                    <td>Medical</td>
                                    <td>@Model.Medical</td>
                                    <td>@Model.MedicalPercent</td>
                                    <td>@Model.MedicalItemType</td>

                                </tr>

                            </tbody>
                        </table>
                        <br />
                        <div>
                            <p><h3>Net Allowance: @Model.TotAllowance</h3></p>
                        </div>
                        <div>
                            <p><h3>Net Deduction: @Model.TotDeduction</h3></p>
                        </div>
                        <div>
                            <p><h3>Net Salary: @Model.NetSalary</h3></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

